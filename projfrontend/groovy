pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Bawanie/T-Shirt-Ecom-Project.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('bawanie/tshirt-ecom')
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('', 'dockerhub-credentials') {
                        docker.image('bawanie/tshirt-ecom').push()
                    }
                }
            }
        }
    }
}
